<UserControl x:Class="Sortieranlage_View_WPF.View.HandbetriebView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sortieranlage_View_WPF.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  
    

    <Border Background="#808080"
            BorderBrush="DarkGray"
            BorderThickness="0"
            CornerRadius="0,0,0,0">
        
        <Grid>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Grid.Column="0"
                    BorderBrush="#585858"
                    BorderThickness="0,0,0,3"
                    CornerRadius="0,0,0,0"
                    Background="#606060">

                <TextBlock x:Name="txt_Verbindung"
                           Text="OFFLINE: Bedienschalter muss betätigt werden"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="Red"
                           FontSize="18"
                           FontFamily="calibri"/>

            </Border>

            <Grid Grid.Row="1">

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!--Motor-->
                <Border Grid.Row="0"
                        Grid.Column="0"
                        Margin="20"
                        BorderBrush="#585858"
                        BorderThickness="3"
                        CornerRadius="20"
                        Background="#606060"
                        Width="180">

                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="5" Color="#404040"/>
                    </Border.Effect>

                    <StackPanel>

                        <Border Background="#484848" 
                                CornerRadius="18,18,0,0"
                                BorderThickness="0,0,0,2"
                                BorderBrush="#585858">

                            <TextBlock Text="Motor" 
                                       HorizontalAlignment="Center"
                                       Margin="3"
                                       Foreground="white"
                                       FontFamily="Calibri"
                                       FontSize="15"/>

                        </Border>

                        <Image Source="Pictures/Motor.png" Width="100" Height="100"/>

                        <Button Width="100"
                                Height="30"
                                Content="OFF"
                                BorderBrush="red"
                                Style="{StaticResource ButtonStyle1}"
                                VerticalAlignment="Bottom"
                                x:Name="btn_foerderband"
                                PreviewMouseDown="btn_foerderband_PreviewMouseDown" 
                                PreviewMouseUp="btn_foerderband_PreviewMouseUp"/>

                    </StackPanel>

                </Border>

                <!--Kompressor-->
                <Border Grid.Row="0"
                        Grid.Column="2"
                        Margin="20"
                        BorderBrush="#585858"
                        BorderThickness="3"
                        CornerRadius="20"
                        Background="#606060"
                        Width="180">

                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="5" Color="#404040"/>
                    </Border.Effect>

                    <StackPanel>

                        <Border Background="#484848" 
                                CornerRadius="18,18,0,0"
                                BorderThickness="0,0,0,2"
                                BorderBrush="#585858">

                            <TextBlock Text="Kompressor" 
                                       HorizontalAlignment="Center"
                                       Margin="3"
                                       Foreground="white"
                                       FontFamily="Calibri"
                                       FontSize="15"/>

                        </Border>

                        <Image Source="Pictures/Kompressor.png" Width="100" Height="100"/>

                        <Button Width="100"
                                Height="30"
                                Content="OFF"
                                BorderBrush="red"
                                Style="{StaticResource ButtonStyle1}"
                                VerticalAlignment="Bottom"
                                x:Name="btn_kompressor"
                                Click="btn_kompressor_Click"/>

                    </StackPanel>

                </Border>

                <!--Auswerfer Weiß-->
                <Border Grid.Row="1"
                        Grid.Column="0"
                        Margin="20"
                        BorderBrush="#585858"
                        BorderThickness="3"
                        CornerRadius="20"
                        Background="#606060"
                        Width="180">

                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="5" Color="#404040"/>
                    </Border.Effect>

                    <StackPanel>

                        <Border Background="#484848" 
                                CornerRadius="18,18,0,0"
                                BorderThickness="0,0,0,2"
                                BorderBrush="#585858">

                            <TextBlock Text="Auswerfer Weiß" 
                                       HorizontalAlignment="Center"
                                       Margin="3"
                                       Foreground="white"
                                       FontFamily="Calibri"
                                       FontSize="15"/>

                        </Border>

                        <Image Source="Pictures/Auswerfer.png" Width="100" Height="100"/>

                        <Button Width="100"
                                Height="30"
                                Content="OFF"
                                BorderBrush="red"
                                Style="{StaticResource ButtonStyle1}"
                                VerticalAlignment="Bottom"
                                x:Name="btn_ventil_weiss" 
                                PreviewMouseDown="btn_ventil_weiss_PreviewMouseDown" 
                                PreviewMouseUp="btn_ventil_weiss_PreviewMouseUp"/>

                    </StackPanel>

                </Border>

                <!--Auswerfer Blau-->
                <Border Grid.Row="1"
                        Grid.Column="1"
                        Margin="20"
                        BorderBrush="#585858"
                        BorderThickness="3"
                        CornerRadius="20"
                        Background="#606060"
                        Width="180">

                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="5" Color="#404040"/>
                    </Border.Effect>

                    <StackPanel>

                        <Border Background="#484848" 
                                CornerRadius="18,18,0,0"
                                BorderThickness="0,0,0,2"
                                BorderBrush="#585858">

                            <TextBlock Text="Auswerfer Blau" 
                                       HorizontalAlignment="Center"
                                       Margin="3"
                                       Foreground="white"
                                       FontFamily="Calibri"
                                       FontSize="15"/>

                        </Border>

                        <Image Source="Pictures/Auswerfer.png" Width="100" Height="100"/>

                        <Button Width="100"
                                Height="30"
                                Content="OFF"
                                BorderBrush="red"
                                Style="{StaticResource ButtonStyle1}"
                                VerticalAlignment="Bottom"
                                x:Name="btn_ventil_blau" 
                                PreviewMouseDown="btn_ventil_blau_PreviewMouseDown" 
                                PreviewMouseUp="btn_ventil_blau_PreviewMouseUp"/>

                    </StackPanel>

                </Border>

                <!--Auswerfer Rot-->
                <Border Grid.Row="1"
                        Grid.Column="2"
                        Margin="20"
                        BorderBrush="#585858"
                        BorderThickness="3"
                        CornerRadius="20"
                        Background="#606060"
                        Width="180">

                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="5" Color="#404040"/>
                    </Border.Effect>

                    <StackPanel>

                        <Border Background="#484848" 
                                CornerRadius="18,18,0,0"
                                BorderThickness="0,0,0,2"
                                BorderBrush="#585858">

                            <TextBlock Text="Auswerfer Rot" 
                                       HorizontalAlignment="Center"
                                       Margin="3"
                                       Foreground="white"
                                       FontFamily="Calibri"
                                       FontSize="15"/>

                        </Border>

                        <Image Source="Pictures/Auswerfer.png" Width="100" Height="100"/>

                        <Button Width="100"
                                Height="30"
                                Content="OFF"
                                BorderBrush="red"
                                Style="{StaticResource ButtonStyle1}"
                                VerticalAlignment="Bottom"
                                x:Name="btn_ventil_rot" 
                                PreviewMouseDown="btn_ventil_rot_PreviewMouseDown" 
                                PreviewMouseUp="btn_ventil_rot_PreviewMouseUp"/>

                    </StackPanel>

                </Border>




                
                
                
                
                
                
                
                
                
                
                

                <Border Grid.Row="0"
                        Grid.Column="1"
                        Margin="20"
                        BorderBrush="#585858"
                        BorderThickness="3"
                        CornerRadius="20"
                        Background="#606060"
                        Width="230"
                        Height="100">

                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="5" Color="#404040"/>
                    </Border.Effect>

                    <StackPanel>

                        
                        <Border Grid.Row="0"
                                Background="#484848" 
                                CornerRadius="18,18,0,0"
                                BorderThickness="0,0,0,2"
                                BorderBrush="#585858">

                            <TextBlock Text="Bedienschalter" 
                                       HorizontalAlignment="Center"
                                       Margin="3"
                                       Foreground="white"
                                       FontFamily="Calibri"
                                       FontSize="18"
                                       FontWeight="Bold"/>

                        </Border>

                        <Button Grid.Row="1"
                                x:Name="btn_bedienschalter"
                                Width="100"
                                Height="30"
                                Margin="0,10,0,0"
                                Content="Connect"
                                BorderBrush="red"
                                Style="{StaticResource ButtonStyle1}"
                                VerticalAlignment="Bottom"
                                Click="btn_bedienschalter_Click"/>

                    </StackPanel>

                </Border>



            </Grid>
        </Grid>
    </Border>

</UserControl>
