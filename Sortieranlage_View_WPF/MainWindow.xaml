<Window x:Class="Sortieranlage_View_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sortieranlage_View_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1000">
    <Grid Background="	#363636">
    
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        
        
        <!--Main WindowView-->
        
            <ContentControl Grid.Column="1"
                            Grid.Row="1"
                            x:Name="MainContent"/>
        

        <StackPanel Name="linkeSeitenbarStckPanel"  Grid.Row="1" Background="Transparent">

            <RadioButton Name="MenueButtonStartseite"
                         Content="Startseite"
                         Height="50"
                         Foreground="White"
                         FontSize="14"
                         Style="{StaticResource MenuButtonTheme}" Click="MenueButtonStartseite_Click"
                         />

            <RadioButton Name="MenueButtonHandbetrieb"
                         Content="Handbetrieb"
                         Height="50"
                         Foreground="White"
                         FontSize="14"
                         Style="{StaticResource MenuButtonTheme}" Click="MenueButtonHandbetrieb_Click"
                         />

         
        </StackPanel>
        
    </Grid>
</Window>
